{
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "newtravelchina.vercel.app" }],
      "destination": "https://www.travelchina.space/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/:file(robots\\.txt)", "destination": "/robots.txt" },
    { "source": "/:file(sitemap\\.xml)", "destination": "/sitemap.xml" },
    { "source": "/:path*", "destination": "/index.html" }
  ]
}
